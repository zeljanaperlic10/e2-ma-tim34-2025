<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Naslov -->
        <TextView
            android:id="@+id/registerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registracija korisnika"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email adresa"
            android:inputType="textEmailAddress"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Korisničko ime -->
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Korisničko ime"
            android:inputType="textPersonName"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Lozinka -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lozinka"
            android:inputType="textPassword"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Potvrda lozinke -->
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Potvrdi lozinku"
            android:inputType="textPassword"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Avatar izbor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Izaberi avatar:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/avatarSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="16dp"/>

        <!-- Dugme Registruj se -->
        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registruj se"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Link za povratak na login -->
        <Button
            android:id="@+id/backToLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Već imate nalog? Prijavite se"
            android:backgroundTint="#E0E0E0"
            android:textColor="@android:color/black" />

    </LinearLayout>
</ScrollView>